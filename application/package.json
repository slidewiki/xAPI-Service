{
  "name": "xapi-service",
  "version": "0.1.0",
  "description": "This is a Microservice implementation of aspects of the xAPI",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/xapi-service"
  },
  "bugs": "https://github.com/slidewiki/xapi-service/issues",
  "author": "Allan Third (allan.third@open.ac.uk)",
  "license": "MPL-2.0",
  "main": "server.js",
  "scripts": {
    "clean": "rm -R ./node_modules/ ./coverage/",
    "lint": "eslint -c .eslintrc \"./**/*.js\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha ./tests/unit_*.js",
    "test:integration": "mocha ./tests/integration_*.js",
    "coverage": "istanbul cover _mocha --include-all-sources ./tests/*.js",
    "coverall": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage ./",
    "start:watch": "nodemon"
  },
  "dependencies": {
    "fs-extra": "^1.0.0",
    "adm-zip": "^0.4.7",
    "archiver": "^2.1.1",
    "ajv": "^4.11.0",
    "boom": "^4.2.0",
    "database-cleaner": "^1.2.0",
    "good": "^7.1.0",
    "good-console": "^6.2.0",
    "good-squeeze": "^5.0.0",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "^7.3.0",
    "hapi-swagger": "^7.6.0",
    "inert": "^4.1.0",
    "joi": "^10.2.0",
    "request": "^2.75.0",
    "request-promise-native": "^1.0.3",
    "vision": "^4.1.1"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.14.0",
    "eslint-plugin-promise": "^3.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "sloc": "^0.2.0"
  },
  "pre-commit": [
    "lint"
  ]
}
